# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-your-api-key-here
OPENAI_ORG_ID=org-your-org-id-here  # Optional

# LangSmith Configuration (for monitoring and tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=ls__your-langsmith-api-key-here
LANGCHAIN_PROJECT=nyc-event-recommender

# Qdrant Configuration (local by default)
QDRANT_PATH=./local_qdrant
QDRANT_COLLECTION_NAME=nyc_events

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:8501"]

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_EVENTS_PER_QUERY=10

# Optional: External API Keys for future expansion
# TAVILY_API_KEY=tvly-your-tavily-api-key-here
# SERPAPI_API_KEY=your-serpapi-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

